<div class="mb-6 last:mb-0">
  <div class="flex items-center justify-between mb-1">
    <span class="text-sm font-medium text-gray-900"><%= job[:class] %></span>
    <span class="text-sm text-gray-500"><%= job[:percentage] %>%</span>
  </div>
  <div class="w-full bg-gray-200 rounded-full h-2.5 overflow-hidden">
    <div class="bg-blue-600 h-2.5 rounded-full transition-all duration-300 ease-in-out shadow-inner" 
         style="width: <%= job[:percentage] %>%"></div>
  </div>
  <div class="flex items-center justify-between mt-1">
    <span class="text-sm text-gray-500"><%= job[:message] %></span>
    <span class="text-xs text-gray-400">Updated: <%= job[:updated_at] %></span>
  </div>
</div> 